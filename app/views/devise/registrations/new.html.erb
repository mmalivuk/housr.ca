	<div class="register">
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "registerForm" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><p><%= f.label :email %></p>
  <%= f.text_field :email %></div><br>

  <div class="field"><p><%= f.label :password %></p>
  <%= f.password_field :password %></div><br>

  <div class ="field"><p><%= f.label :password_confirmation, "Confirm Password" %></p>
  <%= f.password_field :password_confirmation %></div><br>
<br>
  <div><%= f.submit 'Register NOW!', :name => "register", :class => "register" %></div>
<% end %>
</div>