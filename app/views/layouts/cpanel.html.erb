<!DOCTYPE html>
<html>
<head>
  <title>housr.ca</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "bootstrap" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
    <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>
</head>
<body>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="/">housr.ca</a>
          <ul class="nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/find">Find an Agent</a></li>
            <li><a href="/agents">Realtor's Section</a></li>
			<li><a href="/about">About</a></li>
			<li><a href="/contact">Contact</a></li>
		  </ul>
		
		
				<% if user_signed_in? %>
					<ul class="nav secondary-nav">
					            <li class="dropdown" data-dropdown="dropdown">
					              <a href="#" class="dropdown-toggle"><%= current_user.email %></a>
					              <ul class="dropdown-menu">
					                <li><a href="/cpanel">Control Panel</a></li>
					                <li><%= link_to "View My Profile", user_path(current_user) %></li>
					                <li class="divider"></li>
					                <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
					              </ul>
					            </li>
					          </ul>
			  <% else %>
			    <ul class="nav secondary-nav"><li><%= link_to "Sign Up", new_user_registration_path %></li> 
			<li><%= link_to "Sign In", new_user_session_path %></li>
				</ul>
			  <% end %></p>
			
          
        </div>
      </div>
    </div>

	<div class="container-fluid">
	      <div class="sidebar">
	        <div class="well">
	          <h5>Menu</h5>
	          <ul>
	            <li><a href="/cpanel">Control Panel</a></li>
	            <li><a href="<%= edit_user_path(current_user) %>">Edit Profile</a></li>
	            <li><a href="<%= user_path(current_user) %>">View Profile</a></li>
	            <li><a href="/help">Help</a></li>
	          </ul>
	          <h5>Listings</h5>
	          <ul>
	            <li><a href="#">Add a Listing</a></li>
	            <li><a href="#">Manage my Listings</a></li>
	          </ul>
	          <h5>Leads</h5>
	          <ul>
	            <li><a href="#">Add a Lead</a></li>
	            <li><a href="#">Manage my Leads</a></li>
	          </ul>
	        </div>
	      </div>
	      <div class="content">
			<% if flash[:notice] %>
				<div class="alert-message warning" data-alert="alert">
				  <a class="close" href="#">Ã—</a>
				  <p><%= flash[:notice] %></p>
				</div>
			<% end %>
	        <!-- Main hero unit for a primary marketing message or call to action -->
	        <div class="hero-unit">
	        <%= yield %>
	        </div>



	        <footer>
	          <p>&copy; housr.ca 2011 by Milan Malivuk</p>
	        </footer>
	      </div>
	</div>
</body>
</html>
