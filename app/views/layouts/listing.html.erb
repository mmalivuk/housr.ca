<div class="contentTop">
    <div class="quoteAvail">
    	<h1 class="listingtitle">
			<%= @listing.street_number %> <%= @listing.street_name %></h1>
			
        <div class="availability">
        	<!--
            Depending on your availability, remove the class "hidden" from the appropriate state
            and put it in the other. this hides whichever status should be hidden.
            =========
            if you're not available, edit the date when you'll be available to start accepting work.
            =========
            this link also reveals the contact form
            -->
        
        	<p class="available">
            	<a href="#" title="Contact the listing agent"><%= number_to_currency(@listing.asking_price) %><br><span>contact this listing agent</span></a>
            </p>
            
            
        	<p class="notAvailable hidden">
            	<a href="#proposal" title="Sold. View Realtor's profile">Sold<br /> <span>view realtor's profile</span></a>
            </p>
            
            
        </div>
		
		<h3><%= @listing.title %></h3>
        
    </div>
</div>

<div class="contentMiddle">
    <div class="leftCol">
    
    

        <!-- ============================= -->
        <!-- ====== More photographs ====== -->	
        <!-- ============================= -->
        <h2>More photographs</h2>
        
        <p><a href="<%= @listing.img_url %>"><%= image_tag @listing.img_url(:thumb), :width => "125px" if @listing.img?%></a></p>
        

        <!-- ============================= -->
        <!-- =========== Description ========== -->	
        <!-- ============================= -->
        <h2>Description</h2>
        
        <%= simple_format(@listing.description) %>

        <!-- ============================= -->
        <!-- ====== Home details ====== -->	
        <!-- ============================= -->
        <h2>Home details</h2>
        
        <p><b>Bedrooms:</b> <%= @listing.bedrooms %></p>
		<p><b>Bathrooms:</b> <%= @listing.bathrooms %></p>
		<p><b>Building type:</b> <%= @listing.building_type %></p>
		<p><b>MLS number:</b> <%= @listing.mls_number %></p>
		<p><b>Approx. Sq. Ft.:</b> <%= @listing.sq_ft %></p>
		<p><b>Garage Space:</b> <%= @listing.garage_space %></p>
		<p><b>Storeys:</b> <%= @listing.storeys %></p>
		
		<!-- ============================= -->
        <!-- =========== Map ========== -->	
        <!-- ============================= -->
        <h2>Map</h2>

		<%= gmaps4rails({
		  "map_options" => {"auto_adjust" => false, "zoom" => 10 },
		  "markers"     => {"data" => @json }
		 })
		%>

		
   <br class="clearfloat"><br>             
    </div><!-- END leftCol -->








    <div class="rightCol">
        <div class="infoBlock light">
        
        	<!--
            enter the correct path to your vCard in the link below.
            -->
        
            
            
            
            	<!--
                vCard contact information.
                note the classes in the list items
                give the icon styles you see.
                -->
            
            	<ul class="contactInfo">
					<%= image_tag @listing.img_url(:thumb), :width => "315px" %>
                	<li class="address">
                        <%= @listing.city %>, ON
                    </li>
					<li class="website">
                        www.housr.ca
                    </li>
                </ul>
        </div>


        <!--
        email to friends form. configure the
        tellafriend.php file with you email 
        address and you're good to go!
        -->

        <div class="infoBlock light" id="tellBuddies">
            <h2>Email this listing to a friend</h2>
            <form name="tellafriend" class="tellBuddies" action="tellafriend.php" method="post" onsubmit="return checkfields()"> 
                <p>
                    <label for="name">your name <span>*</span></label><br />
                    <input type="text" size="45" name="name" id="name" maxlength="45" />
                </p>
                <p>
                	<label for="email">your email <span>*</span></label><br />
                	<input type="text" size="45" name="email" id="email" maxlength="45"/>
                </p>
                
                <p class="topDashed">please enter your friend's email address:</p>
                <br />
    
                <p>
                	<label for="friendmail1">email<span>*</span></label><br />
                	<input type="text" size="45" name="friendmail1" id="friendmail1" maxlength="45"/>
                </p>
                
                <p class="highlight">Ps, the email will contain your name and email address.</p>
                <p>
                	<input onclick="validate();" type="button" value="send to friend"/>
                </p>
            </form>
        </div>
       
     <br class="clearfloat" />
