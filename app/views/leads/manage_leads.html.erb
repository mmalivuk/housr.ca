<h1>Listing leads</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Status</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Looking to</th>
    <th>Notes</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @leads = Lead.where(:user_id => current_user.id) %>
<% @leads.each do |lead| %>
  <tr>
    <td><%= lead.first_name %></td>
    <td><%= lead.last_name %></td>
    <td><%= lead.status %></td>
    <td><%= lead.phone %></td>
    <td><%= lead.email %></td>
    <td><%= lead.looking_to %></td>
    <td><%= lead.notes %></td>
    <td><%= link_to 'Show', lead %></td>
    <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
    <td><%= link_to 'Destroy', lead, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

