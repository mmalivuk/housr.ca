<h1>Manage listings</h1><br class="clearfloat">
<br>
<table>
  <tr>
    <th>Street number</th>
    <th>Street name</th>
    <th>Title</th>
    <th>City</th>
    <th>Asking price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @listings = Listing.where(:user_id => current_user.id) %>
<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.street_number %></td>
    <td><%= listing.street_name %></td>
    <td><%= listing.title %></td>
    <td><%= listing.city %></td>
    <td><%= listing.asking_price %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Listing', new_listing_path %>
