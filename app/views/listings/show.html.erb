<div class="hero-unit">
	<div class="row">
		
		<div class="span4"><a href="<%= @listing.img_url %>"><%= image_tag @listing.img_url(:thumb) if @listing.img? %></a>
		</div>
		<div class="row">
			<h2 class="span10" align="center">
			  <%= @listing.title %>
			</h2>
		<div class="span5">
<h3>
  <strong><%= @listing.street_number %> <%= @listing.street_name %></strong>
</h3>

<p>
  <%= @listing.city %>, ON
</p>
		</div>
		
		<div class="span4" align="right">
			<h3><br>
			$ <%= @listing.asking_price %><br>
			
			</h3>
		</div>
		
		
		</div>
		
	</div>
	
	
</div>


<div class="row">
  <div class="span12">

    <div class="row">
      <div class="span4">
        <p>
		<b>Building type:</b> <%= @listing.building_type %><br>
		<b>Bedrooms:</b> <%= @listing.bedrooms %><br>
		<b>Bathrooms:</b> <%= @listing.bathrooms %><br>
		<b>Storeys:</b> <%= @listing.storeys %>
		</p>
      </div>
      <div class="span4">
        <p>
			<b>MLS number:</b> <%= @listing.mls_number %><br>
			<b>Size:</b> <%= @listing.sq_ft %> sq. ft.<br>
			<b>Garage space:</b> <%= @listing.garage_space %><br>
		</p>
      </div>
    </div>
  </div>
</div>

<p><br>
  <%= @listing.description %>
</p>



